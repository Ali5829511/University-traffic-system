# Database Configuration
# إعدادات قاعدة البيانات

# PostgreSQL Connection String
# يمكن استخدام قاعدة بيانات سحابية مثل:
# - Supabase: postgresql://postgres:[password]@[host].supabase.co:5432/postgres
# - Neon: postgresql://[user]:[password]@[host].neon.tech/[database]
# - AWS RDS: postgresql://[user]:[password]@[host].rds.amazonaws.com:5432/[database]
# - Heroku Postgres: postgresql://[credentials]@[host].compute.amazonaws.com:5432/[database]

DATABASE_URL=postgresql://user:password@host:port/database

# SSL Configuration (required for most cloud databases)
# إعدادات SSL (مطلوبة لمعظم قواعد البيانات السحابية)
DB_SSL=true

# Server Configuration
# إعدادات الخادم
PORT=3000
NODE_ENV=development

# Docker Configuration (for docker-compose)
# إعدادات Docker (لـ docker-compose)
# ⚠️ قم بتغيير كلمة المرور قبل النشر!
# ⚠️ Change password before deployment!
DB_USER=traffic_user
DB_PASSWORD=traffic_password
DB_NAME=traffic_system
DB_PORT=5432

# Security (Optional)
# الأمان (اختياري)
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=your-session-secret-here
